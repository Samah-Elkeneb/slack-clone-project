<div class="flex h-screen flex-col justify-between bg-[#47244a] rounded-l-lg text-base">
  <div class="px-4 py-6">
    <ul class="mt-6 space-y-1">
      <li>
        <details class="group [&amp;_summary::-webkit-details-marker]:hidden" data-controller="channels" open>
          <summary class="flex cursor-pointer items-center justify-between rounded-lg px-4 py-2 text-white hover:bg-[#5b3861]">
            <span class="font-medium"> Channels </span>
            <span class="shrink-0 transition duration-300 group-open:-rotate-180">
              <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </span>
          </summary>
          <ul class="mt-2 space-y-1 px-4">
            <% @channels.each do |channel| %>
              <li>
                <div class="flex justify-between items-center hover:bg-[#5b3861] rounded-lg ">
                  <div class="flex items-center gap-2 mx-2">
                    <% if channel.public %>
                      <svg viewBox="0 0 20 20" class="w-4 h-4">
                        <path fill="#d5c6db" fill-rule="evenodd" d="M9.74 3.878a.75.75 0 1 0-1.48-.255L7.68 7H3.75a.75.75 0 0 0 0 1.5h3.67L6.472 14H2.75a.75.75 0 0 0 0 1.5h3.463l-.452 2.623a.75.75 0 0 0 1.478.255l.496-2.878h3.228l-.452 2.623a.75.75 0 0 0 1.478.255l.496-2.878h3.765a.75.75 0 0 0 0-1.5h-3.506l.948-5.5h3.558a.75.75 0 0 0 0-1.5h-3.3l.54-3.122a.75.75 0 0 0-1.48-.255L12.43 7H9.2zM11.221 14l.948-5.5H8.942L7.994 14z" clip-rule="evenodd"></path>
                      </svg>
                    <% else %>
                      <svg viewBox="0 0 20 20" class="w-4 h-4">
                        <path fill="#d5c6db" fill-rule="evenodd" d="M10 1.5A4.5 4.5 0 0 0 5.5 6v1.5h-.25A2.25 2.25 0 0 0 3 9.75v6.5c0 .966.784 1.75 1.75 1.75h10.5A1.75 1.75 0 0 0 17 16.25v-6.5a2.25 2.25 0 0 0-2.25-2.25h-.25V6A4.5 4.5 0 0 0 10 1.5m3 6V6a3 3 0 1 0-6 0v1.5zM4.5 9.75A.75.75 0 0 1 5.25 9h9.5a.75.75 0 0 1 .75.75v6.5a.25.25 0 0 1-.25.25H4.75a.25.25 0 0 1-.25-.25z" clip-rule="evenodd"></path>
                      </svg>
                    <% end %>
                    <%= link_to channel.name, messages_channel_path(channel),
                    data: { 
                      turbo_frame: "messages_frame",
                      action: "click->channels#subscribe",
                      channels_target: "link", room: "#{channel.name}_#{channel.id}"
                       },
                      class: "channel-link block py-2 font-medium text-[#d5c6db]"%>
                  </div>
                  <% if current_user.admin?(channel)%>
                    <%= button_to channel_path(channel),
                    method: :delete,
                    form: { data: { turbo_confirm: "Are you sure you want to delete #{channel.name} channel?" } },
                    class: "text-white hover:bg-[#68476e] px-4 rounded-lg" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="4" y1="6" x2="20" y2="6" stroke-linecap="round" stroke-linejoin="round"/>
                        <line x1="9" y1="3" x2="15" y2="3" stroke-linecap="round" stroke-linejoin="round"/>
                        <rect x="6" y="6" width="12" height="18" rx="2" ry="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </li>
            <%end%>
            <li>
              <div class="flex" data-controller="modal" data-modal-target="frame">
                <%= link_to new_channel_path, data: { action: "click->modal#open" }, class: "rounded-lg px-4 py-2 font-medium text-white hover:bg-[#5b3861] flex items-center gap-2" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1">
                    <rect x="2" y="2" width="16" height="16" rx="2" ry="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <line x1="10" y1="5" x2="10" y2="15" stroke-linecap="round" stroke-linejoin="round"/>
                    <line x1="5" y1="10" x2="15" y2="10" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  Add channel
                <% end %>
              </div>
            </li>
          </details>
        </li>
      </ul>
    </div>
    <div class="sticky inset-x-0 bottom-0 border-t border-gray-100">
      <% if user_signed_in? %>
        <%= button_to destroy_user_session_path,
      method: :delete,
      class: "group relative flex w-full justify-center rounded-lg px-2 py-1.5 text-white hover:bg-[#5b3861]",
      form: { data: { turbo_confirm: "Are you sure you want to logout?" } } do %>
          <%# if current_user.profile_image%>
          <%# <img alt="" src="<%= current_user.profile_image " class="size-10 rounded-full object-cover"> %>
          <%#else%>
          <div class="h-8 w-8 rounded-full bg-[#d5c6db] flex items-center justify-center font-medium text-[#340e38]">
            <%= current_user.email.first.upcase %>
          </div>
          <%#end%>
          <div class="flex flex-col leading-tight text-left pl-2">
            <span class="font-medium text-white"><%= current_user.email.split("@").first %></span>
            <span class="text-white text-xs"><%= current_user.email %></span>
          </div>
          <span class="invisible absolute start-full top-1/2 ms-4 -translate-y-1/2 rounded-sm bg-gray-900 px-2 py-1.5 text-xs font-medium text-white group-hover:visible">
            Logout
          </span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<main class="flex-1 flex flex-col h-screen">
  <turbo-frame id="messages_frame">
    <div class="h-full flex justify-center items-center">
      <%= image_tag "message_icon.png"%>
    </div>
  </turbo_frame>
</main>
<div id="modal_frame">
</div>
