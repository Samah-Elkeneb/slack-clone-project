<div class="h-screen flex bg-surface-50">

  <aside class="w-64 border-r border-slate-200 bg-white flex-shrink-0">
    <div class="p-3">
      <div class="mb-2 text-xs text-slate-500 uppercase">Channels</div>

      <% @channels.each do |channel| %>
        <%= link_to channel.name,
          channel_path(channel),
          class: "block px-3 py-2 rounded-md mb-1 hover:bg-slate-100 #{'bg-slate-200 font-medium' if channel.id == @active_channel_id}" %>
      <% end %>
    </div>

    <div class="mt-auto p-4 border-t border-slate-100 text-xs text-slate-500">
      Signed in as<br>
      <strong class="text-slate-700"><%= current_user.email%></strong>
    </div>
  </aside>

  <main class="flex-1 flex flex-col">

    <header class="px-6 py-3 border-b border-slate-200 bg-white/60 backdrop-blur-sm">
      <h2 class="text-lg font-semibold">
        <%= @channel.name %>
      </h2>
      <p class="text-xs text-slate-500">channel description</p>
    </header>

    <section class="flex-1 overflow-auto p-6 bg-slate-50" id="chat-box" data-room="<%= @active_channel.name %>_<%= @active_channel_id %>">
      <% if @messages.empty? %>
        <div class="text-center text-slate-500 py-12">
         no messages yet
        </div>
      <% else %>
        <% @messages.each do |msg| %>
          <article class="mb-4">
            <div class="flex items-baseline gap-3">
              <div class="h-8 w-8 rounded-full bg-slate-300 flex items-center justify-center text-sm font-medium">
                <%= msg.user.email.first %>
              </div>

              <div>
                <div class="text-sm font-medium">
                  <%= msg.user.email %>
                  <span class="text-xs text-slate-400 ml-2">
                    <%= msg.created_at.strftime('%H:%M') %>
                  </span>
                </div>

                <div class="mt-1 text-sm text-slate-700"><%= msg.content %></div>
              </div>
            </div>
          </article>
        <% end %>
      <% end %>
    </section>

    <%= form_with model: @message,
                  local: true,
                  class: "border-t border-slate-200 p-4 bg-white" do |f| %>
      <%= f.hidden_field :channel_id, value: @channel.id %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div class="max-w-3xl mx-auto flex gap-3 items-center">
        <%= f.text_field :content,
          placeholder: "message #{@channel.name}",
          class: "flex-1 rounded-md px-3 py-2 border border-slate-200 focus:ring-2 focus:ring-slate-300" %>

          <%= f.submit "send", class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
      </div>

    <% end %>

  </main>
</div>

