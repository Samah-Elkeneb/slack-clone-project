<figure class="attachment attachment--<%= blob.representable? ? "preview" : "file" %> attachment--<%= blob.filename.extension.downcase %>">
  <% url = url_for(blob) %>
  <% if blob.image? %>
    <%= link_to url, target: "_blank", rel: "noopener noreferrer" do %>
      <%= image_tag(blob.representable? ? blob.representation(resize_to_limit: [1024, 768]) : blob) %>
    <% end %>
  <% else %>
    <%= link_to blob.filename.to_s, url, target: "_blank", rel: "noopener noreferrer" %>
  <% end %>
  <figcaption class="attachment__caption">
    <span class="attachment__name"><%= blob.filename %></span>
    <span class="attachment__size"><%= number_to_human_size blob.byte_size %></span>
  </figcaption>
</figure>
